            <Label VerticalAlignment="Stretch" HorizontalAlignment="Right" Width="150" Content="% 80 - % 90" Background="#ff1a1a" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="0" Grid.Row="9" Margin="0,2,10,2"></Label>
            <Label VerticalAlignment="Stretch" HorizontalAlignment="Right" Width="150" Content="% 90 - %100" Background="#990000"  Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="0" Grid.Row="10" Margin="0,2,10,2"></Label>
