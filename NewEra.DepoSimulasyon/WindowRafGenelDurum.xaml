            <Label x:Name="lbl_60_70" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="150" Content="10 ADET " Background="LightGray" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="1" Grid.Row="7" Margin="10,2,0,2"></Label>
            <Label x:Name="lbl_70_80" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="150" Content="10 ADET " Background="LightGray" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="1" Grid.Row="8" Margin="10,2,0,2"></Label>
            <Label x:Name="lbl_80_90" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="150" Content="10 ADET " Background="LightGray" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="1" Grid.Row="9" Margin="10,2,0,2"></Label>
            <Label x:Name="lbl_90_100" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="150" Content="10 ADET " Background="LightGray" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="1" Grid.Row="10" Margin="10,2,0,2"></Label>
            <Label x:Name="lblOverloaded" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="150" Content="10 ADET " Background="LightGray" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="1" Grid.Row="11" Margin="10,2,0,2"></Label>
            <Label x:Name="lblTunnel" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="150" Content="10 ADET " Background="LightGray" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="1" Grid.Row="12" Margin="10,2,0,2"></Label>
            <Label x:Name="lblUnUsing" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="150" Content="10 ADET " Background="LightGray" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="1" Grid.Row="13" Margin="10,2,0,2"></Label>
            <Label x:Name="lblToplam" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="150" Content="10 ADET " Background="LightGray" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="1" Grid.Row="14" Margin="10,2,0,2"></Label>

        </Grid>
