                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label VerticalAlignment="Stretch" HorizontalAlignment="Right" Width="150" Content="BOŞ" Background="#ffffe6" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="0" Grid.Row="0" Margin="0,2,10,2"></Label>
            <Label VerticalAlignment="Stretch" HorizontalAlignment="Right" Width="150" Content="% 0 - % 10" Background="#00e600" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="0" Grid.Row="1" Margin="0,2,10,2"></Label>
            <Label VerticalAlignment="Stretch" HorizontalAlignment="Right" Width="150" Content="% 10 - % 20" Background="#99ff33" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="0" Grid.Row="2" Margin="0,2,10,2"></Label>
            <Label VerticalAlignment="Stretch" HorizontalAlignment="Right" Width="150" Content="% 20 - % 30" Background="#ccff33" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="0" Grid.Row="3" Margin="0,2,10,2"></Label>
            <Label VerticalAlignment="Stretch" HorizontalAlignment="Right" Width="150" Content="% 30 - % 40" Background="#ddff99" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="0" Grid.Row="4" Margin="0,2,10,2"></Label>
            <Label VerticalAlignment="Stretch" HorizontalAlignment="Right" Width="150" Content="% 40 - % 50" Background="#ffff66" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="0" Grid.Row="5" Margin="0,2,10,2"></Label>
