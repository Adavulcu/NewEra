            <Label VerticalAlignment="Stretch" HorizontalAlignment="Right" Width="150" Content="TOPLAM" Background="Wheat" Foreground="Black" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="0" Grid.Row="14" Margin="0,2,10,2"></Label>

            <Label x:Name="lblBos" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="150" Content="10 ADET " Background="LightGray" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="1" Grid.Row="0" Margin="10,2,0,2"></Label>
            <Label x:Name="lbl_0_10" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="150" Content="10 ADET " Background="LightGray" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="1" Grid.Row="1" Margin="10,2,0,2"></Label>
