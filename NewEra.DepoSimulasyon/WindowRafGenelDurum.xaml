            <Label x:Name="lbl_30_40" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="150" Content="10 ADET " Background="LightGray" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="1" Grid.Row="4" Margin="10,2,0,2"></Label>
            <Label x:Name="lbl_40_50" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="150" Content="10 ADET " Background="LightGray" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Column="1" Grid.Row="5" Margin="10,2,0,2"></Label>
