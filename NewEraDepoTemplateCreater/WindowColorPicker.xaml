<Window x:Class="NewEraDepoTemplateCreater.WindowColorPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewEraDepoTemplateCreater"
        xmlns:wpfx="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="WindowColorPicker" Height="180" Width="200" WindowStyle="ToolWindow" KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen">
    <Grid Background="LightGoldenrodYellow">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <wpfx:ColorPicker Name="ClrPicker" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" DisplayColorAndName="True" 
                   Margin="10,10,10,5" Grid.Row="0" />
        <Button x:Name="BtnKayde" Content="KAYDET" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Stretch"
                Margin="10,5,10,10" Grid.Row="1" Click="BtnKayde_Click" ></Button>
    </Grid>
</Window>
